@model IEnumerable<MvcCoreElastiCacheAWS.Models.Coche>

@{
    ViewData["Title"] = "Favoritos";
}

<h1>Favoritos</h1>
<h2>@ViewData["MENSAJE"]</h2>
<h2>Temp: @TempData["DATA"]</h2>
@if(Model != null) {
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdCoche)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Marca)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Modelo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Imagen)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdCoche)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Marca)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Modelo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Imagen)
                    </td>
                    <td>
                        <a asp-action="EliminarFavorito" asp-controller="Coches" asp-route-idcoche="@item.IdCoche" class="btn btn-danger">Eliminar Fav</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
} else {
    <h1>No tienes FAVORITOS</h1>
}
